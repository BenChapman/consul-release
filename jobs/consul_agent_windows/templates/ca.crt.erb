<%=
  ca_cert = nil

  respond_to?(:if_link) && if_link("consul_common") do |link|
    ca_cert = link.p("consul_common.ca_cert")
  end.else do
    respond_to?(:if_link) && if_link("consul") do |link|
      ca_cert = link.p("consul.ca_cert")
    end.else do
      ca_cert = p("consul.ca_cert")
    end
  end

  ca_cert
%>
